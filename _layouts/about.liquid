---
layout: default
---
<style>
/* 贴顶 + 全屏 iframe 外壳 */
body{margin-top:0 !important;}
.full-header{
  position:relative;
  width:100vw;
  left:calc(-50vw + 50%);
  height:100vh;
  overflow:hidden;
}
</style>

<div class="full-header">
  <iframe id="headerFrame"
          src="{{ '/assets/html/header.html' | relative_url }}"
          frameborder="0"
          style="position:absolute; top:0; left:0; width:100%; height:100%; display:block; background:#000;">
  </iframe>
</div>

<!-- 整页共用 JS -->
<script src="{{ '/assets/js/js_hola10/jquery-3.2.1.min.js' | relative_url }}"></script>
<script src="{{ '/assets/js/js_hola10/plugins.js' | relative_url }}"></script>
<script src="{{ '/assets/js/js_hola10/main.js' | relative_url }}"></script>

<script>
/* 手动初始化：先等 iframe 加载完，再执行 main.js 里需要的逻辑 */
window.addEventListener('load', function () {
  const headerFrame = document.getElementById('headerFrame');
  if (!headerFrame) return;

  // 1. 自动高度（可选）
  headerFrame.onload = function () {
    this.style.height = this.contentDocument.documentElement.scrollHeight + 'px';
  };

  // 2. 对 iframe 内部做 parallax
  headerFrame.onload = function () {
    const iframeDoc = this.contentDocument || this.contentWindow.document;
    const $iframeBody = iframeDoc.body;
    // 如果 main.js 里用 $('#home').parallax(); 要改成
    $($iframeBody).find('#home').parallax();
  };

  // 3. 下面可以继续写“父页面”其他 JS（typed、counter、slider...）
  //    这里就能操控 .post 区域了
});
</script>

<br />
<!-- 2. logo + 正文：完全回归主题默认样式 -->
<img align="middle" src="{{ '/assets/img/cslogo.png' | relative_url }}" width="100%"><br><br>

<div class="post">
  <header class="post-header">
    <h1>
      {% if site.title == 'blank' %}
        {{ site.first_name }} {{ site.middle_name }}
        <span class="font-weight-bold">{{ site.last_name }}</span>
      {% else %}
        {{ site.first_name }} {{ site.middle_name }}
        <span class="font-weight-bold">{{ site.last_name }}</span>
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="lazy" path=profile_image_path
            class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ page.intro }}</div>

    {% if page.selected_papers %}
      <h2><a href="{{ '/publications/' | relative_url }}" style="color: inherit">Selected publications</a></h2>
      {% include selected_papers.liquid %}
    {% endif %}

    {% if page.news and site.announcements.enabled %}
      <h2><a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a></h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    {% if page.latest_posts %}
      <h2><a href="{{ '/blog/' | relative_url }}" style="color: inherit">Latest posts</a></h2>
      {% include latest_posts.liquid %}
    {% endif %}

    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>
        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}
  </article>
</div>
